        notifCorner.CornerRadius = UDim.new(0, 8)
        notifCorner.Parent = notif
        
        task.wait(3)
        notif:Destroy()
    end
end, Color3.fromRGB(255, 100, 200))
createButton("üëÆ COPY SHERIFF NAME", "Copy sheriff's username to clipboard", function()
